---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Computing Science student at SFU building Android apps, ML systems, and web tools.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body
    class="bg-white dark:bg-slate-950 text-slate-900 dark:text-slate-100 transition-colors duration-300 min-h-screen"
  >
    <!-- Header -->
    <header class="border-b-2 border-slate-200 dark:border-slate-800">
      <nav
        class="max-w-5xl mx-auto px-4 py-5 flex items-center justify-between"
      >
        <a href="/" class="text-xl font-bold font-mono"> raman_kumar </a>

        <div class="flex items-center gap-8">
          <a
            href="/projects"
            class="text-sm font-medium hover:text-slate-600 dark:hover:text-slate-400 transition-colors"
          >
            Projects
          </a>
          <a
            href="/about"
            class="text-sm font-medium hover:text-slate-600 dark:hover:text-slate-400 transition-colors"
          >
            About
          </a>
          <a
            href="/contact"
            class="text-sm font-medium hover:text-slate-600 dark:hover:text-slate-400 transition-colors"
          >
            Contact
          </a>

          <!-- Theme Toggle -->
          <button
            id="theme-toggle"
            class="p-2 border-2 border-slate-200 dark:border-slate-700 hover:border-slate-900 dark:hover:border-slate-300 transition-colors"
            aria-label="Toggle theme"
          >
            <svg
              id="theme-toggle-light-icon"
              class="w-4 h-4 hidden dark:block"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z"
              ></path>
            </svg>
            <svg
              id="theme-toggle-dark-icon"
              class="w-4 h-4 block dark:hidden"
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path
                d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"
              ></path>
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t-2 border-slate-200 dark:border-slate-800 mt-24">
      <div
        class="max-w-5xl mx-auto px-4 py-6 flex justify-between items-center text-sm text-slate-600 dark:text-slate-400"
      >
        <p>Â© {new Date().getFullYear()} Raman Kumar</p>
        <p class="font-mono text-xs">Built with Astro</p>
      </div>
    </footer>

    <!-- Theme Toggle Script -->
    <script>
      // initial theme
      const saved = localStorage.getItem("theme");
      const wantsDark = saved
        ? saved === "dark"
        : matchMedia("(prefers-color-scheme: dark)").matches;
      document.documentElement.classList.toggle("dark", wantsDark);

      // click handler
      document.addEventListener("DOMContentLoaded", () => {
        const btn = document.getElementById("theme-toggle");
        if (!btn) return;
        btn.addEventListener("click", () => {
          const nowDark = document.documentElement.classList.toggle("dark");
          localStorage.setItem("theme", nowDark ? "dark" : "light");
        });
      });
    </script>
  </body>
</html>
