---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { projects } from "../data/projects";

const featuredProjects = projects
  .filter((p) => p.featured)
  .sort((a, b) => b.date.getTime() - a.date.getTime());
---

<BaseLayout title="Raman Kumar — Android, ML, Web Developer">
  <Hero />

  <!-- Featured Projects Section -->
  <section class="max-w-6xl mx-auto px-4 py-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold mb-4">Featured Projects</h2>
      <p class="text-slate-600 dark:text-slate-400 max-w-2xl mx-auto">
        Building across Android, Computer Vision, and Web — each project solves
        real problems with clean code.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredProjects.map((project) => <ProjectCard {...project} />)}
    </div>

    <div class="text-center mt-12">
      <a
        href="https://github.com/Gherra"
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block px-6 py-3 rounded-xl backdrop-blur-sm bg-white/70 dark:bg-slate-800/70 border border-slate-300 dark:border-slate-600 font-medium hover:shadow-lg hover:scale-105 transition-all duration-200"
      >
        View All on GitHub →
      </a>
    </div>
  </section>
</BaseLayout>
