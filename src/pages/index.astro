---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { projects } from "../data/projects";

const featuredProjects = projects
  .filter((p) => p.featured)
  .sort((a, b) => b.date.getTime() - a.date.getTime());
---

<BaseLayout title="Raman Kumar — Computing Science @ SFU">
  <Hero />

  <!-- Featured Projects Section -->
  <section class="max-w-5xl mx-auto px-4 py-12">
    <div class="mb-12">
      <h2 class="text-3xl font-bold mb-3">Selected Work</h2>
      <p class="text-slate-600 dark:text-slate-400 max-w-2xl">
        Projects across Android development, computer vision, and web
        applications.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {featuredProjects.map((project) => <ProjectCard {...project} />)}
    </div>

    <div class="mt-12 border-t-2 border-slate-200 dark:border-slate-800 pt-8">
      <a
        href="/projects"
        class="inline-flex items-center gap-2 px-6 py-3 border-2 border-slate-900 dark:border-white font-medium hover:bg-slate-900 dark:hover:bg-white hover:text-white dark:hover:text-slate-900 transition-colors"
      >
        View All Projects
        <svg
          class="w-4 h-4"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>
  </section>

  <!-- Current Focus Section -->
  <section
    class="max-w-5xl mx-auto px-4 py-16 border-t-2 border-slate-200 dark:border-slate-800"
  >
    <div class="space-y-4">
      <h2 class="text-2xl font-bold">Currently</h2>
      <div class="border-l-4 border-slate-900 dark:border-white pl-6 space-y-2">
        <p class="text-slate-700 dark:text-slate-300">
          Computing Science student at Simon Fraser University
        </p>
        <p class="text-slate-600 dark:text-slate-400 text-sm">
          Taking: Natural Language Processing • Mobile Applications • Computer
          Networks
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
